<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dfrank.cryptocurrency">
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/bitcoin"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/bitcoin"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controller.Splash"
            android:theme="@style/Theme.Design.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.MainActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar">
        </activity>
        <activity android:name=".controller.ConversionActivity"
            android:label="@string/conversion">
        </activity>
    </application>

</manifest>